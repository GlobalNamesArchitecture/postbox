  <%= semantic_form_for(@contact) do |f| %>
    <%= f.inputs do %>
      <%= f.input :email, :hint_class => 'contact-hint', :error_class => 'contact-error', :required => true %>
      <%= f.input :name %>
      <%= f.input :message, :hint_class => 'contact-hint', :error_class => 'contact-error', :required => true %>
    <% end %>
    <%= recaptcha_tags :display => { :theme => 'clean' } %>
    <%= f.buttons do %>
      <%= f.commit_button "Submit" %>
    <% end %>
  <% end %>