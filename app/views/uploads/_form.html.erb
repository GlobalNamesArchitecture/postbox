  <%= semantic_form_for(@upload, :html => { :multipart => true }) do |f| %>
    <%= f.inputs do %>
      <%= f.input :email, :hint_class => 'upload-hint', :error_class => 'upload-error', :input_html => { :class => 'dwc_upload' } %>
      <%= f.input :dwc, :as => :file, :label => "Darwin Core Archive", :required => true, :input_html => { :class => 'dwc_upload' }  %>
      <%= f.input :dwc_cache, :as => :hidden %>
    <% end %>
    <%= f.buttons %>
  <% end %>