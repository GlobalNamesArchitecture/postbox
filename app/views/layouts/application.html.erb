<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? "Global Names PostBox :: " << content_for(:title) : "Global Names PostBox" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="SiteContainer" class="structural">

    <div class="background"></div>

    <%= render :partial => 'layouts/header' %>

   <div id="BodyContent" class="structural fixedWidth clear">
     <div class="background">
       <div class="middle"></div>
       <div class="top"></div>
       <div class="bottom"></div>
     </div>
     <div class="inner">
        <%= content_for?(:title) ? content_tag(:h2, content_for(:title)) : "" %>
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
       <%= yield %>
     </div>
   </div>

   <%= render :partial => 'layouts/footer' %>

  </div>
</body>
</html>
