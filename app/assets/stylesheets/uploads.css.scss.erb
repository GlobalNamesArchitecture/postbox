h3.contact{margin:0.5em 2em;}
li{line-height:1.25em;}
fieldset.buttons ol{
  margin-left:12em;
}
#upload-preview{
  position:relative;
  height:600px;
}
#preview-uploader{
  position:absolute;
  top:-3.5em;
  right:1em;
}
#tree-wrapper{
  height:560px;
  width:650px;
  overflow:auto;
  float:left;
}
#tree-panel-wrapper{
  float:right;
  width:250px;
}
#tree-panel-wrapper .panel{
  width:200px;
  margin:0px auto 1em;
  padding:1em;
  border-radius:6px;
  border:1px solid #ccc;
  background-color:#fafafa;
}
#tree-stats h3{
  padding-top:0px;
  margin-top:0px;
}
#tree-download a{
  padding-left:30px;
  background-position:5px 50%;
  background-repeat:no-repeat;
  background-image: url(<%= asset_path "disk.png" %>);
}
.button_to div{text-align:center;}

table.uploads{
  border-collapse: collapse;
  border-spacing: 0;
  width:100%;
}
table.uploads tr{
  line-height:2em;
}
table.uploads th.header-user{width:25%;}
table.uploads th.header-title{width:50%;}
table.uploads th.header-submitted{width:20%;}
table.uploads th{border-bottom:2px solid #ccc;}
table.uploads tbody td{padding:0 4px;}