p.hint{font-style:italic;margin-left:4em;}
h3.contact{margin:0.5em 2em;}
li{line-height:1.25em;}
fieldset.buttons ol{
  margin-left:12em;
}
#upload-preview{
  position:relative;
  height:600px;
}
#preview-uploader{
  position:absolute;
  top:-3.5em;
  right:1em;
}
#tree-wrapper{
  height:560px;
  width:650px;
  overflow:auto;
  float:left;
}
#tree-panel-wrapper{
  float:right;
  width:250px;
}
#preview-loader{
  width:200px;
  height:100px;
  line-height:100px;
  margin:0px auto;
  padding-left:50px;
  background-position:0px 50%;
  background-repeat:no-repeat;
  background-image: url(<%= asset_path "ajax-loader.gif" %>);
}
#tree-panel-wrapper .panel{
  width:200px;
  margin:0px auto 1em;
  padding:1em;
  border-radius:6px;
  border:1px solid #ccc;
  background-color:#fafafa;
}
#tree, #metadata{padding:1em 0.5em;}
.metadata-content{line-height:1.2em;}
#tree-stats h3{
  padding-top:0px;
  margin-top:0px;
}
#tree-download{
  line-height:1.25em;
  text-align:right;
}
#tree-download a{
  padding-left:25px;
  background-position:0px 50%;
  background-repeat:no-repeat;
  background-image: url(<%= asset_path "disk.png" %>);
}
.button_to div{text-align:center;}

table.uploads{
  border-collapse: collapse;
  border-spacing: 0;
  width:100%;
}
table.uploads tr{
  line-height:2em;
}
table.uploads th.header-user{width:25%;}
table.uploads th.header-title{width:50%;}
table.uploads th.header-submitted{width:20%;}
table.uploads th{border-bottom:2px solid #ccc;}
table.uploads tbody td{padding:0 4px;}

/* jQuery UI Override */
.ui-tabs{margin:0px;padding:0px;}
.ui-tabs .ui-tabs-nav li a{padding:0.25em 1em;}
.ui-widget{font-size:1em;}
.ui-widget-content{border:0px;background:none;color:#323232;font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;}
.ui-widget-header{background:none;border-bottom:1px solid #ccc;border-radius:0px;border-left:0px;border-right:0px;border-top:0px;}
.ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {background-color:#fafafa;background-image:none;}
.ui-state-active, .ui-widget-content .ui-state-active, .ui-widget-header .ui-state-active {background-color:#fff;}