body{
  color:#323232;
  background: url(<%= asset_path 'body-background.png' %>) repeat scroll 0 0 transparent;
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size: 14px;
  height: auto !important;
  line-height:1em;
  margin:0px;
  padding:0px;
}
h2{
  color: #962825;
  font-weight: bold;
  font-size:30px;
  white-space:nowrap;
  line-height: 1.2em;
  margin: 0 0 20px;
}
ol, ul {
  list-style:none outside none;
}
a{
  color:#45704D;
  text-decoration: none;
}
p{
  line-height:1.5em;
}
fieldset{
  border:0px;
}



#SiteContainer{
  display: block;
  margin: 0;
  min-width: 1033px;
  padding: 0;
  position: relative;
}
#Header .inner {
  height: 45px;
  padding: 25px;
}
#Logo {
  display: block;
  float: left;
  height: 45px;
  position: relative;
  width: 400px;
}
#Logo a{
  display: block;
  position: relative;
  width: 100%;
}
#SiteNavigation{
  display: block;
  float: right;
  margin: 5px 0 0;
  padding:0px;
  position: relative;
}
#SiteNavigation li{
  border:1px solid transparent;
  display: block;
  float: left;
  margin: 0 5px;
  position: relative;
}
#SiteNavigation li.active{
  border:1px solid #ccc;
  border-radius:20px;
  background-color:#fafafa;
}
#SiteNavigation li a{
  display: block;
  font-size: 16px;
  line-height: 30px;
  padding: 5px 17px;
  position: relative;
}
#SiteNavigation li:hover{
  border:1px solid #ccc;
  border-radius:20px;
  background-color:#eee;
}

#SiteContainer .background{
  background: url(<%= asset_path 'header-gradient.png' %>) repeat-x scroll 0 0 transparent;
}
#BodyContent .background div {
  position:absolute;
  width:100%;
}
#BodyContent .background .middle {
  background: url(<%= asset_path 'content-background.png' %>) repeat-y scroll 0 0 transparent;
  height: 100%;
  left: 0;
  top: 0;
}
#BodyContent .background .top {
  background: url(<%= asset_path 'content-background-top.png' %>) no-repeat scroll 0 0 transparent;
  height: 12px;
  left: 0;
  top: 0;
}
#BodyContent .background .bottom {
  background: url(<%= asset_path 'content-background-bottom.png' %>) no-repeat scroll 0 0 transparent;
  bottom: 0;
  height: 12px;
  left: 0;
}
#BodyContent .inner {
  padding: 0px;
}
#Footer .inner {
  padding: 30px 20px;
  text-align:center;
}
#Footer span{
  margin:0 20px;
  font-size:0.9em;
}


.structural{
  display:block;
  position:relative;
}
.structural .background {
  display: block;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
}
.structural .inner {
  display: block;
  position: relative;
}
.fixedWidth{
  margin: 0 auto;
  text-align: left;
  width: 1033px;
}
.hrDotted {
    background: url(<%= asset_path 'horizontal-rule.png' %>) repeat-x scroll 0 0 transparent;
    height: 1px;
    margin: 40px 0;
    width: 100%;
}
#content-wrapper {
  padding: 12px 2px 0;
}
#content-splash{
  position: relative;
  width: 1029px;
}
#content-splash h2{
  margin:0.5em 1em;
}
#content-body{
  min-height:200px;
  padding: 0 40px;
  position: relative;
  font-size:1.2em;
}
#content-features{
  background: url(<%= asset_path 'home-content-background-bottom.png' %>) no-repeat scroll center bottom #FAFAFA;
  border-top: 1px solid #F5F5F5;
  margin-top: 40px;
  padding: 30px;
}
#content-features .content-feature{
  float:left;
}
#content-features-logo{
  width:250px;
}
#content-features-description{
  width:700px;
}
#content-features h3{
  font-size: 13px;
  font-weight: bold;
  margin: 15px 0 6px;
}

.clear:after{
  clear: both;
  content: " ";
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}
.hidden{display:none;}

.tagline{
  font-size:1.5em;
  font-weight:bold;
  text-align:center;
  margin:2em 0;
  color:#962825;
}

.error-dialog{
  padding: 3em;
  margin: 2.5em auto 0 auto;
  border: 1px solid #ccc;
  border-radius:8px;
  text-align:center;
  width:70%;
}
