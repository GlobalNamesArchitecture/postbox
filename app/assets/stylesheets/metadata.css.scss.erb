form.metadata fieldset{
  padding:1.5em;
  margin:1.5em;
  border:1px solid #ccc;
  border-radius:6px;
}
form.metadata legend span{
  font-size:1.25em;
}
form.metadata fieldset.buttons{
  border:0px;
  margin:2em;
  padding:0px;
}
form.metadata fieldset.buttons ol{
  margin-left:2em;
}
form.metadata li.radio fieldset{
  border:0px;
  margin-bottom:0px;
  padding-bottom:0px;
}
form.metadata li.radio ol label{
    width:auto;
}
form.metadata li.hint{padding-left:2em;font-style:italic;}
form.formtastic fieldset ol li.radio fieldset ol li {
    margin:0.1em 0.5em 0.5em 0;
    display: inline-block;
}
#metadata_license_input legend label{
  float:none;
  text-align:left;
  width:400px;
}
#metadata_license_input ol li{
  background-repeat:no-repeat;
  width:220px;
  height:3em;
  background-position:30px 8px;
  background-repeat:no-repeat no-repeat;
}
.license_cc-0{background-image:url(<%= asset_path 'cc_icons/cc-0.png' %>)}
.license_cc-by{background-image:url(<%= asset_path 'cc_icons/cc-by.png' %>)}
.license_cc-by-sa{background-image:url(<%= asset_path 'cc_icons/cc-by-sa.png' %>)}
.license_cc-by-nc{background-image:url(<%= asset_path 'cc_icons/cc-by-nc.png' %>)}
.license_cc-by-nc-sa{background-image:url(<%= asset_path 'cc_icons/cc-by-nc-sa.png' %>)}
#metadata_license_input ol li label{color:transparent;}
